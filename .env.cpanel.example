# cPanel Deployment Configuration
# Copy this file to .env.cpanel and fill in your values
# NEVER commit .env.cpanel to version control

# cPanel Server Configuration
CPANEL_HOST=162.215.85.33
CPANEL_USERNAME=ihepapp
CPANEL_SSH_KEY_PATH=~/.ssh/ihep_cpanel_rsa

# Deployment Path (usually public_html for cPanel)
DEPLOY_PATH=/home/ihepapp/public_html

# Node.js Configuration (if using cPanel Node.js Application)
NODE_VERSION=22
NODE_ENV=production

# Application Configuration
APP_PORT=3000
APP_URL=https://ihep.app

# Optional: Cloudflare Configuration (for cache purging)
CLOUDFLARE_ZONE_ID=
CLOUDFLARE_API_TOKEN=

# Optional: Slack/Discord Webhook for deployment notifications
DEPLOYMENT_WEBHOOK_URL=

# Backup Configuration
KEEP_BACKUPS=5
BACKUP_DIR=/home/ihepapp/backups

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_RETRIES=3
